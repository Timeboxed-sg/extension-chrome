{
  "name": "Timeboxed",
  "description": "Access Netflix with your Timeboxed pass.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_title": "Timeboxed",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "64": "/images/icon64.png",
      "128": "/images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*/login"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "64": "/images/icon64.png",
    "128": "/images/icon128.png"
  }
}
